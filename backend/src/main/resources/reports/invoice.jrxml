<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="invoice" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
    
    <property name="com.jaspersoft.studio.data.defaultdataadapter" value="One Empty Record"/>
    
    <parameter name="invoiceId" class="java.lang.Long"/>
    <parameter name="customerName" class="java.lang.String"/>
    <parameter name="customerDoc" class="java.lang.String"/>
    <parameter name="customerEmail" class="java.lang.String"/>
    <parameter name="customerAddress" class="java.lang.String"/>
    <parameter name="providerName" class="java.lang.String"/>
    <parameter name="providerTaxId" class="java.lang.String"/>
    <parameter name="providerEmail" class="java.lang.String"/>
    <parameter name="providerAddress" class="java.lang.String"/>
    <parameter name="issueDate" class="java.lang.String"/>
    <parameter name="subtotal" class="java.math.BigDecimal"/>
    <parameter name="taxTotal" class="java.math.BigDecimal"/>
    <parameter name="total" class="java.math.BigDecimal"/>
    
    <queryString>
        <![CDATA[]]>
    </queryString>
    
    <field name="productCode" class="java.lang.String"/>
    <field name="productName" class="java.lang.String"/>
    <field name="quantity" class="java.lang.Integer"/>
    <field name="unitPrice" class="java.math.BigDecimal"/>
    <field name="taxRate" class="java.math.BigDecimal"/>
    <field name="lineTotal" class="java.math.BigDecimal"/>
    
    <title>
        <band height="100" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[FACTURA]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="40" width="155" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Factura #" + $P{invoiceId}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="400" y="60" width="155" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Fecha: " + $P{issueDate}]]></textFieldExpression>
            </textField>
        </band>
    </title>
    
    <pageHeader>
        <band height="120" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="100" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[PROVEEDOR:]]></text>
            </staticText>
            <textField isStretchWithOverflow="true">
                <reportElement x="0" y="20" width="270" height="40"/>
                <textFieldExpression><![CDATA[$P{providerName} + "\n" + $P{providerTaxId} + "\n" + $P{providerAddress}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="280" y="0" width="100" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[CLIENTE:]]></text>
            </staticText>
            <textField isStretchWithOverflow="true">
                <reportElement x="280" y="20" width="275" height="40"/>
                <textFieldExpression><![CDATA[$P{customerName} + "\n" + $P{customerDoc} + "\n" + $P{customerAddress}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>
    
    <columnHeader>
        <band height="30" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="100" height="30" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[CÃ³digo]]></text>
            </staticText>
            <staticText>
                <reportElement x="100" y="0" width="200" height="30" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Producto]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="0" width="50" height="30" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Cant.]]></text>
            </staticText>
            <staticText>
                <reportElement x="350" y="0" width="80" height="30" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Precio Unit.]]></text>
            </staticText>
            <staticText>
                <reportElement x="430" y="0" width="60" height="30" backcolor="#CCCCCC"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Total]]></text>
            </staticText>
        </band>
    </columnHeader>
    
    <detail>
        <band height="25" splitType="Stretch">
            <textField>
                <reportElement x="0" y="0" width="100" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{productCode}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true">
                <reportElement x="100" y="0" width="200" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{productName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="300" y="0" width="50" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="350" y="0" width="80" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <paragraph rightIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{unitPrice}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="430" y="0" width="60" height="25"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <paragraph rightIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{lineTotal}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
    
    <summary>
        <band height="100" splitType="Stretch">
            <textField>
                <reportElement x="350" y="20" width="80" height="20"/>
                <textElement textAlignment="Right">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Subtotal:"]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="430" y="20" width="60" height="20"/>
                <textElement textAlignment="Right">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{subtotal}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="350" y="40" width="80" height="20"/>
                <textElement textAlignment="Right">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["IVA:"]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="430" y="40" width="60" height="20"/>
                <textElement textAlignment="Right">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{taxTotal}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="350" y="60" width="80" height="20"/>
                <textElement textAlignment="Right">
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["TOTAL:"]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="430" y="60" width="60" height="20"/>
                <textElement textAlignment="Right">
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{total}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>




