        Customer.CustomerBuilder customer = Customer.builder();

        customer.address( dto.getAddress() );
        customer.docNumber( dto.getDocNumber() );
        customer.email( dto.getEmail() );
        customer.id( dto.getId() );
        customer.name( dto.getName() );

